configuration {
    drun-display-format: "{icon} {name}";
    display-drun: "Apps";
    show-icons: true;
    hide-scrollbar: true;
    font: "Iosevka Nerd Font 12";
    fixed-num-lines: true;
    lines: 12;
}

* {
  background-color: #00000000;
  border-color: #2e343f;
  text-color: #8c90aa;
  spacing: 0;
}

window {
  background-color: #282C33F0;
  transparency: "real";
  width: 50%;
}

overlay {
  background-color: magenta;
}

inputbar {
  padding: 8px;
  border: 0 0 1px 0;
  children: [prompt,entry];
}

prompt {
  padding: 0px 8px;
  border: 0 1px 0 0;
}

textbox {
  border: 0 0 1px 0;
  border-color: #282C33;
}

entry {
  padding: 0px 8px;
}

element {
  border: 0 0 1px 0;
  padding: 8px 16px;
}

element-icon {
  size: 1em;
}

element selected {
  background-color: #FFFFFF10;
  text-color: #9da0bb;
}
